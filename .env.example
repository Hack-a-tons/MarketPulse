# Market Pulse Analyst - Environment Configuration
# Copy this file to .env and customize as needed

# ========================================
# Data Date Range Configuration
# ========================================
# Based on dataset overlap analysis (2010-01-04 to 2013-11-26)
# This range ensures both news and stock data are available
DATA_START_DATE=2010-01-04
DATA_END_DATE=2013-11-26

# ========================================
# Redpanda / Kafka Configuration
# ========================================
# Redpanda runs via Docker Compose (see compose.yaml)
# No manual installation needed - just run: docker compose up -d
REDPANDA_BROKERS=localhost:19000
REDPANDA_PORT=19000
REDPANDA_ADMIN_PORT=20000
REDPANDA_TOPIC_NEWS=market.news
REDPANDA_TOPIC_PRICES=market.prices

# ========================================
# Service Configuration
# ========================================
# Main API service port (externally accessible)
PORT=16000
NODE_ENV=production

# ========================================
# Apify Configuration (for live data)
# ========================================
# Get your API token from https://console.apify.com/account/integrations
APIFY_API_TOKEN=your_apify_token_here

# ========================================
# TrueFoundry Configuration (LLM Reasoning)
# ========================================
TRUEFOUNDRY_API_KEY=your_truefoundry_key_here
TRUEFOUNDRY_WORKSPACE=your_workspace_here

# ========================================
# Senso Context OS Configuration (Self-Improvement)
# ========================================
SENSO_API_KEY=your_senso_key_here
SENSO_ORG_ID=your_senso_org_id_here

# ========================================
# Slack Configuration (Phase 4)
# ========================================
# Get webhook URL from https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=
SLACK_MIN_CONFIDENCE=0.7

# ========================================
# Logging & Debugging
# ========================================
LOG_LEVEL=info
DEBUG=false
